[init]
  defaultBranch = main

[core]
  pager = delta
  editor = nvim
  excludesfile = ~/.gitignore 

[pull]
  rebase = true

[push]
  autoSetupRemote = true

[fetch]
  prune = true

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection

[merge]
    conflictstyle = zdiff3
